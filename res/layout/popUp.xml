<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/emailCaption"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Doctor e-mail:"/>
    <EditText android:id="@+id/emailText"
              android:layout_height = "50dp"
              android:inputType="emailWords"/>
    <TextView android:id="@+id/dateCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date of next appointment mm/dd/yyyy:"/>
    <EditText android:id="@+id/dateText"
        android:layout_height = "50dp"
        android:inputType="dateWords"/>
</LinearLayout>

